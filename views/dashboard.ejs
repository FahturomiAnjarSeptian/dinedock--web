<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DineDock | Premium Reservation</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <style>
        /* --- PERBAIKAN STYLE TOMBOL KENDARAAN --- */
        .vehicle-option {
            margin: 20px 0;
            position: relative;
            width: 100%;
        }
        
        .vehicle-option input[type="checkbox"] {
            display: none; /* Sembunyikan checkbox asli */
        }

        /* Tombol Default (Mati) */
        .vehicle-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            width: 100%;
            padding: 15px;
            box-sizing: border-box; /* Agar padding tidak bikin tombol kegedean */
            background: rgba(255, 255, 255, 0.05);
            border: 2px dashed #666;
            color: #888;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: bold;
            font-size: 0.95rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .vehicle-btn:hover {
            border-color: #c5a059;
            color: #ddd;
        }

        /* Tombol Aktif (Saat Diklik) */
        #check_vehicle:checked + .vehicle-btn {
            background: rgba(197, 160, 89, 0.2); /* Emas Transparan */
            color: #c5a059;
            border: 2px solid #c5a059; /* Garis Solid */
            box-shadow: 0 0 15px rgba(197, 160, 89, 0.2);
        }

        #check_vehicle:checked + .vehicle-btn i {
            transform: scale(1.2);
        }

        /* CSS RESPONSIVE (Menu HP) */
        .hamburger { display: none; cursor: pointer; font-size: 1.5rem; color: #c5a059; }
        .navbar-container { position: absolute; top: 20px; right: 20px; z-index: 100; }
        .nav-links { display: flex; gap: 15px; align-items: center; }

        @media (max-width: 768px) {
            .hamburger { display: block; position: absolute; top: 0; right: 0; }
            .nav-links {
                display: none; 
                flex-direction: column;
                background: rgba(0,0,0,0.95);
                padding: 20px;
                border-radius: 10px;
                position: absolute; top: 40px; right: 0; width: 200px;
                border: 1px solid #c5a059;
                box-shadow: 0 10px 20px rgba(0,0,0,0.5);
            }
            .nav-links.active { display: flex; }
            .nav-links a, .nav-links span { width: 100%; text-align: center; margin: 0; }
            .hero h1 { margin-top: 60px; font-size: 2.5rem; }
        }
    </style>
</head>
<body>

    <div class="hero">
        <div class="navbar-container">
            <div class="hamburger" onclick="toggleMenu()">
                <i class="fas fa-bars"></i>
            </div>
            <div class="nav-links" id="navMenu">
                <span style="color: #c5a059; font-weight: bold; padding: 10px 0; border-bottom: 1px solid #333; margin-bottom: 10px; display: block;">
                    <i class="fas fa-user-circle"></i> <%= user.userName %>
                </span>
                <a href="/menu" style="color: #c5a059; font-weight: bold; border: 1px solid #c5a059; padding: 8px 15px; border-radius: 20px; font-size: 0.8rem; text-decoration: none;">MENU</a>
                <a href="/history" style="color: white; font-weight: bold; border: 1px solid white; padding: 8px 15px; border-radius: 20px; font-size: 0.8rem; text-decoration: none;">RIWAYAT</a>
                <% if (user.role === 'admin') { %>
                    <a href="/admin" style="color: white; border: 1px solid white; padding: 8px 15px; border-radius: 20px; font-size: 0.8rem; text-decoration: none;">Admin Panel</a>
                <% } %>
                <a href="/logout" style="color: #ff4444; border: 1px solid #ff4444; padding: 8px 15px; border-radius: 20px; font-size: 0.8rem; text-decoration: none;">Logout</a>
            </div>
        </div>

        <h1>SEAT & SPOT</h1>
        <p>Integrated Dining & Parking Experience</p>
        <p style="font-size: 0.9rem; color: #c5a059; margin-top: 20px;">OPEN DAILY 10:00 - 22:00</p>
    </div>

    <div class="container">
        <div class="main-content">
            
            <div class="left-panel">
                <div style="margin-bottom: 40px;">
                    <h2><i class="fas fa-utensils"></i> Dining Area</h2>
                    <p style="color: #666; font-size: 0.9rem; margin-bottom: 20px;">Silakan pilih meja yang tersedia.</p>
                    <div class="grid-container">
                        <% tables.forEach(table => { %>
                            <div class="slot <%= table.status %>" 
                                 onclick="selectSlot('table', '<%= table.id %>', this)"
                                 data-id="<%= table.id %>">
                                <span style="font-size: 1.2rem;"><%= table.id %></span>
                                <small><%= table.capacity %> Pax</small>
                            </div>
                        <% }) %>
                    </div>
                </div>

                <div>
                    <h2><i class="fas fa-car"></i> Parking Area</h2>
                    <p style="color: #666; font-size: 0.9rem; margin-bottom: 20px;">Pastikan kendaraan Anda aman.</p>
                    <div class="parking-title">BLOK A - VIP CAR</div>
                    <div class="grid-container">
                        <% mobil.forEach(slot => { %>
                            <div class="slot <%= slot.status %>" onclick="selectSlot('parking', '<%= slot.id %>', this)">
                                <span><%= slot.id %></span>
                            </div>
                        <% }) %>
                    </div>
                    <div class="parking-title" style="margin-top: 20px;">BLOK B - MOTORBIKE</div>
                    <div class="grid-container">
                        <% motor.forEach(slot => { %>
                            <div class="slot <%= slot.status %>" onclick="selectSlot('parking', '<%= slot.id %>', this)">
                                <span><%= slot.id %></span>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>

            <div class="right-panel">
                <h2 style="text-align: center;">Reservation</h2>
                <form action="/book" method="POST">
                    <div class="form-group">
                        <label>GUEST NAME</label>
                        <input type="text" name="name" required placeholder="Enter your full name">
                    </div>
                    <div class="form-group">
                        <label>EMAIL ADDRESS</label>
                        <input type="email" name="email" required placeholder="name@example.com">
                    </div>
                    <div class="form-group">
                        <label>WHATSAPP NUMBER</label>
                        <input type="text" name="phone" required placeholder="+62 8...">
                    </div>
                    <div style="display: flex; gap: 10px;">
                        <div class="form-group" style="flex: 1;">
                            <label>DATE</label>
                            <input type="date" name="date" required>
                        </div>
                        <div class="form-group" style="flex: 1;">
                            <label>TIME</label>
                            <input type="time" name="time" required>
                        </div>
                    </div>

                    <div style="background: #111; padding: 15px; border-radius: 5px; margin-bottom: 20px; border: 1px dashed #444;">
                        <label style="color: #888; font-size: 0.8rem;">SELECTED TABLE</label>
                        <input type="text" id="display_table" readonly placeholder="No table selected" 
                               style="background: transparent; border: none; color: var(--gold); font-weight: bold; font-size: 1.1rem; padding: 0;">
                        <input type="hidden" name="table_id" id="input_table" required>

                        <div class="vehicle-option">
                            <input type="checkbox" id="check_vehicle" onchange="toggleParking()">
                            <label for="check_vehicle" class="vehicle-btn">
                                <i class="fas fa-car"></i>
                                <span>SAYA BAWA KENDARAAN</span>
                            </label>
                        </div>

                        <div id="parking_input_group" style="display: none; margin-top: 10px; border-top: 1px solid #333; paddingTop: 10px;">
                            <label style="color: #c5a059; font-size: 0.8rem; margin-bottom:5px; display:block;">
                                <i class="fas fa-arrow-left"></i> Silakan Klik Slot Parkir di Peta Kiri
                            </label>
                            <input type="text" id="display_parking" readonly placeholder="Belum pilih slot..."
                                   style="background: #222; border: 1px solid #444; color: white; width: 100%; padding: 10px; border-radius: 5px;">
                            <input type="hidden" name="parking_id" id="input_parking">
                        </div>
                    </div>

                    <button type="submit" class="btn-submit">CONFIRM BOOKING</button>
                    <p style="text-align: center; color: #555; font-size: 0.8rem; margin-top: 10px;">*T&C Apply. 90 mins duration.</p>
                </form>
            </div>
        </div>
    </div>

    <div style="text-align: center; padding: 20px; color: #555; font-size: 0.8rem;">
        &copy; 2025 DineDock Integrated System. All Rights Reserved.
    </div>

    <script>
        function toggleMenu() {
            document.getElementById('navMenu').classList.toggle('active');
        }

        function selectSlot(type, id, element) {
            if (element.classList.contains('maintenance')) {
                Swal.fire({
                    icon: 'error',
                    title: 'Slot Tidak Tersedia',
                    text: 'Maaf, slot ini sudah dibooking orang lain!',
                    confirmButtonColor: '#c5a059'
                });
                return;
            }

            if (type === 'table') {
                document.querySelectorAll('.slot').forEach(el => {
                    if(el.getAttribute('onclick')?.includes("'table'")) el.classList.remove('selected');
                });
                document.getElementById('display_table').value = id;
                document.getElementById('input_table').value = id;
            } 
            else if (type === 'parking') {
                if (!document.getElementById('check_vehicle').checked) {
                    // ALERT YANG SUDAH DIPERBAIKI BAHASANYA
                    Swal.fire({
                        icon: 'warning',
                        title: 'Oops...',
                        text: 'Silakan aktifkan tombol "SAYA BAWA KENDARAAN" terlebih dahulu!',
                        confirmButtonColor: '#333'
                    });
                    return;
                }
                document.querySelectorAll('.slot').forEach(el => {
                    if(el.getAttribute('onclick')?.includes("'parking'")) el.classList.remove('selected');
                });
                document.getElementById('display_parking').value = id;
                document.getElementById('input_parking').value = id;
            }
            element.classList.add('selected');
        }

        function toggleParking() {
            const isChecked = document.getElementById('check_vehicle').checked;
            const parkingGroup = document.getElementById('parking_input_group');
            const parkingInput = document.getElementById('input_parking');
            
            if (isChecked) {
                parkingGroup.style.display = 'block';
                parkingInput.required = true;
            } else {
                parkingGroup.style.display = 'none';
                parkingInput.required = false;
                parkingInput.value = '';
                document.getElementById('display_parking').value = '';
                document.querySelectorAll('.slot').forEach(el => {
                    if(el.getAttribute('onclick')?.includes("'parking'")) el.classList.remove('selected');
                });
            }
        }
    </script>

</body>
</html>